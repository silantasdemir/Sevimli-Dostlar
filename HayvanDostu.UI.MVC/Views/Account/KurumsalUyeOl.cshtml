@model HayvanDostu.Model.KurumsalUye

@{
    ViewBag.Title = "KurumsallUyeOl";
}

@using (Html.BeginForm("KurumsalUyeOl", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-horizontal">
            <div class="col-md-12">
                <h2>Kurumsal Uyelik Formu</h2>
                <hr />
                <h3>Kurum Bilgileri</h3>
                <div class="form-group">
                    @Html.LabelFor(model => model.KurumAdi, "Kurum Adı", htmlAttributes: new { @class = "control-label col-md-2", })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KurumAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KurumAdi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.HizmetBaslangicYili, "Hizmet Baslangiç Yılı", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HizmetBaslangicYili, "Hizmet Başlangıç Yılı", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HizmetBaslangicYili, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Telefon, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.FotoUrl, "Fotoğraf Ekle", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input id="FotoUrl" type="file" name="file" required" />
                        @Html.ValidationMessageFor(model => model.FotoUrl, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Telefon, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Telefon2, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Telefon2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Telefon2, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control", @cols = 80, @rows = 3 } })
                        @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.KurumTuru, "Kurum Türü?", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-1">
                        <div class="radio">
                            <label>Tedavi</label>
                            @Html.RadioButtonFor(model => model.KurumTuru, "Tedavi")

                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="radio">
                            <label>Bakım</label>
                            @Html.RadioButtonFor(m => m.KurumTuru, "Bakim")
                        </div>
                        @Html.ValidationMessageFor(model => model.KurumTuru, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        <div class="radio">
                            <label>Konaklama</label>
                            @Html.RadioButtonFor(m => m.KurumTuru, "Konaklama")
                        </div>
                        @Html.ValidationMessageFor(model => model.KurumTuru, "", new { @class = "text-danger" })
                    </div>
                </div>
               
                <h3>Giriş Bilgileri</h3>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, "e-Mail", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.KullaniciAdi, "Kullanici Adi", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sifre, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>
            </div>
        </div>



        <div class="panel-footer">
            @if (ViewBag.Error != null)
            {
                <span>@ViewBag.Error</span>
            }

        </div>

    </div>
}
